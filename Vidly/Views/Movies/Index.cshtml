@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>	        </tr>
    </thead>	    </thead>
    <tbody>

        <tbody>
            @foreach (var movie in Model)
            {
                {
                    <tr>
                        <tr>
                            <td>@movie.Name</td>
                            <td>@movie.Genre.Name</td>
                        </tr>	            
                    </tr>
                }
            }
        </tbody>	    
    
    </tbody>
</table>

